<Window x:Name="window" x:Class="_3D_viewer.MainWindow"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Microsoft.Toolkit.Wpf.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:_3D_viewer.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"

   
   
        xmlns:cmd="clr-namespace:_3D_viewer.Commands"
        xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl" 
        
        mc:Ignorable="d"
        Title="MainWindow" Height="466" Width="707">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>

    </Window.Resources>


    <Grid HorizontalAlignment="Center" Width="687">





        <glWpfControl:GLWpfControl  x:Name="OpenTkControl" MouseMove="OpenTkControl_MouseMove" MouseLeftButtonDown="OpenTkControl_MouseLeftButtonDown"/>


        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" >
            <MenuItem Header="file" Command="{Binding AddObjFileCommand }">
            </MenuItem>
        </Menu>


        <!--ItemsSource ="{Binding NameObjFile, UpdateSourceTrigger=PropertyChanged}"-->


        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" ItemsSource="{Binding checkBoxList.value}" Margin="0,297,474,18" SelectedIndex="0"  CanUserAddRows="False" Width="175" >
            <DataGrid.Columns >
                <DataGridTextColumn Header="model name" Binding="{Binding NameObjFile}" />
                <DataGridCheckBoxColumn Header="IsChecked" Binding="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>


        <Expander  Header="model" VerticalAlignment="Top" HorizontalAlignment="Right" Height="120"  Width="28" Margin="0,186,0,0" ExpandDirection="Left" Background="White">


            <ItemsControl  HorizontalContentAlignment="Left" Width="138" Margin="-120,0,0,-72" Background="Green" HorizontalAlignment="Right">
                <ItemsControl.Items>

                    <Grid Background="Red" Height="91">
                        <RepeatButton x:Name="ZPlusLocal" Content="Z+" HorizontalAlignment="Left"  VerticalAlignment="Top"  Delay="20"  Margin="68,14,0,0" 
                                      Command="{Binding MoveModel}" CommandParameter="0 0 1" Width="20" Height="15"/>
                        <RepeatButton x:Name="ZMinusLocal" Content="Z-"   Delay="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="68,30,0,0" 
                                      Command="{Binding MoveModel}" CommandParameter="0 0 -1" Width="20" Height="16"/>
                        <RepeatButton x:Name="YMinusLocal" Content="Y-"   Delay="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="69,46,0,0"
                                      Command="{Binding MoveModel}" CommandParameter="0 -1 0" Width="20" Height="15"/>
                        <RepeatButton x:Name="XPlusLocal" Content="X+"   Delay="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                      Command="{Binding MoveModel}" CommandParameter="1 0 0" Margin="0,23,30,0" Width="20" Height="15"/>
                        <RepeatButton x:Name="YPlusLocal" Content="Y+"   Delay="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="68,-1,0,0" 
                                      Command="{Binding MoveModel}" CommandParameter="0 1 0" Width="20" Height="15"/>
                        <RepeatButton x:Name="XMinusLocal" Content="X-"   Delay="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                                      Command="{Binding MoveModel}" CommandParameter="-1 0 0" Margin="48,22,0,0" Width="20" Height="14"/>
                    </Grid>

                    <Grid Background="Aqua" Height="98">
                        <RepeatButton x:Name="ZRotPlusLocal" Content="Z+" HorizontalAlignment="Left"  VerticalAlignment="Top"  Delay="10"  Margin="68,14,0,0" 
                            Command="{Binding RotateModel}" CommandParameter="0 0 1" Width="20" Height="15"/>
                        <RepeatButton x:Name="ZRotMinusLocal" Content="Z-" Delay="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="68,30,0,0" 
                            Command="{Binding RotateModel}" CommandParameter="0 0 -1" Width="20" Height="16"/>
                        <RepeatButton x:Name="YRotMinusLocal" Content="Y-" Delay="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="69,46,0,0"
                            Command="{Binding RotateModel}" CommandParameter="0 -1 0" Width="20" Height="15"/>
                        <RepeatButton x:Name="XRotPlusLocal" Content="X+" Delay="10" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Command="{Binding RotateModel}" CommandParameter="1 0 0" Margin="0,23,30,0" Width="20" Height="15"/>
                        <RepeatButton x:Name="YRotPlusLocal" Content="Y+" Delay="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="68,-1,0,0" 
                            Command="{Binding RotateModel}" CommandParameter="0 1 0" Width="20" Height="15"/>
                        <RepeatButton x:Name="XRotMinusLocal" Content="X-" Delay="10" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Command="{Binding RotateModel}" CommandParameter="-1 0 0" Margin="48,22,0,0" Width="20" Height="14"/>
                    </Grid>
                </ItemsControl.Items>
            </ItemsControl>
        </Expander>
        <Grid Margin="19,186,510,179">
            <RadioButton x:Name="localMatrix" Content="Local" VerticalAlignment="Top" Foreground="White" Command="{Binding SetModelMartixModCommand}" CommandParameter="localMatrix" />
            <RadioButton x:Name="modelMatrix" Content="Model" VerticalAlignment="Center" Foreground="White" Command="{Binding SetModelMartixModCommand}" CommandParameter="modelMatrix"/>
            <RadioButton x:Name="viewMatrix" Content="View" VerticalAlignment="Bottom" Foreground="White" Command="{Binding SetModelMartixModCommand}" CommandParameter="viewMatrix"/>
            
            
            </Grid>


        </Grid>
</Window>
